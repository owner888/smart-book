# Smart Book 环境变量配置示例
# 复制此文件为 .env 并填写实际值

# ===================================
# AI API 配置
# ===================================
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# AI 模型配置
GEMINI_MODEL=gemini-2.5-flash
OPENAI_MODEL=gpt-4o-mini
AI_PROVIDER=gemini

# ===================================
# Redis 配置
# ===================================
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===================================
# MySQL 配置（预留）
# ===================================
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_DATABASE=smartbook
MYSQL_USERNAME=root
MYSQL_PASSWORD=

# ===================================
# 书籍配置
# ===================================
# BOOKS_DIR=/path/to/books
# BOOK_PATH=/path/to/book.epub
# BOOK_CACHE=/path/to/book_index.json

# ===================================
# 日志配置
# ===================================
LOG_LEVEL=info
# LOG_FILE=/path/to/app.log

# ===================================
# 服务器配置
# ===================================
# Web 服务器配置
WEB_SERVER_HOST=0.0.0.0
WEB_SERVER_PORT=8088

# MCP 服务器配置
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8089

# WebSocket 服务器配置（预留）
WS_SERVER_HOST=0.0.0.0
WS_SERVER_PORT=8081

# ===================================
# 调试配置
# ===================================
DEBUG=false
