{
    "name": "owner888/smart-book",
    "description": "Smart Book AI Server - RAG-based book Q&A with Gemini AI, supporting EPUB parsing, vector search, and MCP protocol",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "ai",
        "rag",
        "gemini",
        "epub",
        "book",
        "workerman",
        "mcp",
        "vector-search",
        "embedding"
    ],
    "homepage": "https://github.com/owner888/smart-book",
    "authors": [
        {
            "name": "owner888",
            "email": "owner888@example.com"
        }
    ],
    "support": {
        "issues": "https://github.com/owner888/smart-book/issues",
        "source": "https://github.com/owner888/smart-book"
    },
    "require": {
        "php": ">=8.0",
        "ext-curl": "*",
        "ext-zip": "*",
        "ext-mbstring": "*",
        "ext-json": "*",
        "workerman/workerman": "^5.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "suggest": {
        "workerman/redis": "Required for async Redis caching",
        "ext-redis": "Required for Redis caching"
    },
    "autoload": {
        "psr-4": {
            "SmartBook\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SmartBook\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php server.php start",
        "stop": "php server.php stop",
        "restart": "php server.php restart",
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
